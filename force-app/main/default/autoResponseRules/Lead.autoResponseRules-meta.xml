<?xml version="1.0" encoding="UTF-8"?>
<AutoResponseRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <autoResponseRule>
        <fullName>Lead auto response</fullName>
        <active>false</active>
        <ruleEntry>
            <criteriaItems>
                <field>Lead.LAC_ID__c</field>
                <operation>equals</operation>
                <value>110</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.PrimaryLanguage__c</field>
                <operation>equals</operation>
                <value>German</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Company</field>
                <operation>equals</operation>
                <value>Max tested</value>
            </criteriaItems>
            <senderEmail>beratung@orderbird.com</senderEmail>
            <senderName>orderbird AG</senderName>
            <template>Visualforce_Templates/Auto_reply_for_new_lead_DE</template>
        </ruleEntry>
    </autoResponseRule>
</AutoResponseRules>
