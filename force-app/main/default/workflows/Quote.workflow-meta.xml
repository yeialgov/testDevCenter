<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Quote_Owner_Email_Alert</fullName>
        <description>Quote Owner Email Alert</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Workflow_Email_Notifications/Quote_Owner_Email_Alert</template>
    </alerts>
    <fieldUpdates>
        <fullName>OpenRT</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Open</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>OpenRT</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Quote_RT_Closed</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Closed</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Quote&gt;RT&gt;Closed</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Quote_RT_Review</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Review</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Quote&gt;RT&gt;Review</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>ReviewRT</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Review</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>ReviewRT</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>quote_update_accepted_status_date</fullName>
        <field>AcceptedDate__c</field>
        <formula>now()</formula>
        <name>quote_update_accepted_status_date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>OpenRT</fullName>
        <actions>
            <name>OpenRT</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>QuoteClose</fullName>
        <actions>
            <name>Quote_RT_Closed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Rejected,Accepted,Expired</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>QuoteEmailSent</fullName>
        <actions>
            <name>Quote_RT_Review</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Quote_Follow_up</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>In Review</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>ReviewRT</fullName>
        <actions>
            <name>ReviewRT</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>In Review</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Set Account for Realted list</fullName>
        <active>false</active>
        <description>copies the value form the system field Account name into extra field to enable related list on account</description>
        <formula>Account_for_Related_List__c  &lt;&gt;  Opportunity.AccountId</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>quote_accepted_status</fullName>
        <actions>
            <name>quote_update_accepted_status_date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Accepted</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.AcceptedDate__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>Quote_Follow_up</fullName>
        <assignedToType>owner</assignedToType>
        <dueDateOffset>2</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Medium</priority>
        <protected>false</protected>
        <status>Open</status>
        <subject>Quote Follow-up</subject>
    </tasks>
</Workflow>
